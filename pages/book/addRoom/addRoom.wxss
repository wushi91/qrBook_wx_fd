picker{
  margin-top: 30rpx;
  background-color: white;
}


.item{
  text-align: left;
  background-color: white;
  display: flex;
  align-items: center; 
  height:88rpx; 
  padding: 0rpx 30rpx;
}


.item text{
  display: block;
  font-size:34rpx;
  color:rgba(53,53,53,1);
  line-height:34rpx;
  flex: 1;
}

.item image{
  width: 60rpx;
  height: 60rpx;
}
.textarea-wrapper{
  margin-top: 30rpx;
  background-color: white;
  padding: 20rpx 0;
}

textarea{
  display: block;
  font-size:34rpx;
  color:rgba(53,53,53,1);
  line-height:34rpx;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  
  width: 100%;
  height: 112rpx;
  background-color: white;
}

button{
  margin-top: 180rpx;
  width: 480rpx;
